{
  "manifest_version": 3,
  "name": "GenAI Extension",
  "description": "React Chrome Extension",
  "version": "1.0.0",
  "icons":{
      "16" : "16X16.png",
      "32":"32X32.png",
      "48":"48X48.png",
      "128":"128X128.png"
  },
  "action": {
    "default_title": "Open TO use GenAI",
    "default_icon": {
      "16": "16X16.png",
      "32": "32X32.png"
    }
  },
  "permissions": [
    "sidePanel",
    "activeTab",
    "tabs",
    "scripting",
    "*//*/*",
    "contextMenus"
  ],

  "background": {
    "service_worker": "serviceworker.js"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ]
}
