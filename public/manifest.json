{
  "manifest_version": 3,
  "name": "GenAI Extension",
  "description": "React Chrome Extension",
  "version": "1.0.0",
  "action": {
    "default_title": "Open TO use GenAI"
  },
  "permissions": [
    "sidePanel",
    "activeTab",
    "tabs",
    "scripting",
    "*//*/*",
    "contextMenus"
  ],

  "background": {
    "service_worker": "serviceworker.js"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ]
}
